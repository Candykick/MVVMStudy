<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingVertical="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rowMain1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginEnd="7dp"
        android:background="@drawable/row_main_youtuber"
        android:paddingHorizontal="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="14dp">

        <ImageView
            android:id="@+id/rowMainImage1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/logo_sns"
            app:layout_constraintDimensionRatio="h, 16:9"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/rowMainTitle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DAZBEE"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/rowMainImage1"/>
        <TextView
            android:id="@+id/rowMainStock1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4,630"
            android:textColor="@color/white"
            android:textSize="19dp"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/rowMainTitle1"/>
        <TextView
            android:id="@+id/rowMainVariation1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="▲ 210 (+ 4.54%)"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/rowMainStock1"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rowMain2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="7dp"
        android:background="@drawable/row_main_youtuber"
        android:paddingHorizontal="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="14dp">

        <ImageView
            android:id="@+id/rowMainImage2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/logo_sns"
            app:layout_constraintDimensionRatio="h, 16:9"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/rowMainTitle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DAZBEE"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/rowMainImage2"/>
        <TextView
            android:id="@+id/rowMainStock2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4,630"
            android:textColor="@color/white"
            android:textSize="19dp"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/rowMainTitle2"/>
        <TextView
            android:id="@+id/rowMainVariation2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="▲ 210 (+ 4.54%)"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/rowMainStock2"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>