<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OurstockTest" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Widget.App.PrimaryRoundedButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/btn_primary_shape</item>
        <item name="backgroundTint">@color/colorButtonPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="Widget.App.Button.NoStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@null</item>
    </style>

    <style name="Widget.App.TextViewNormal" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.App.TextViewSmall" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="Widget.App.TextViewTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.App.TextViewRv" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="Widget.App.TextViewBigTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.App.TextViewHint" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/grayC4</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="Widget.App.TabText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">17dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.App.EditTextNormal" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">19dp</item>
        <item name="android:textColorHint">@color/gray9t80</item>
    </style>

    <style name="Widget.App.TextInputLayoutNormal" parent="Widget.Design.TextInputLayout">
        <!--<item name="android:colorAccent">@color/white</item>
        <item name="boxBackgroundColor">@color/indigoDarkDeep</item>-->
        <item name="colorControlNormal">@color/indigo</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textCursorDrawable">@color/colorPrimary</item>
    </style>
</resources>